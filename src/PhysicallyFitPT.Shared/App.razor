@namespace PhysicallyFitPT.Shared
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using System
@using System.Linq
@using System.Reflection

<Router AppAssembly="@typeof(App).Assembly"
        AdditionalAssemblies="@_additionalAssemblies">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView>
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {
    private static readonly Assembly[] _additionalAssemblies = ResolveAdditionalAssemblies();

    private static Assembly[] ResolveAdditionalAssemblies()
    {
        // Since we merged PhysicallyFitPT.UI into PhysicallyFitPT.Shared,
        // we don't need to load additional assemblies
        try
        {
            Console.WriteLine("ResolveAdditionalAssemblies: No additional assemblies to load.");
            return Array.Empty<Assembly>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error resolving additional assemblies: {ex}");
            return Array.Empty<Assembly>();
        }
    }
}
