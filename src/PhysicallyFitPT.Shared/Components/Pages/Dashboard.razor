@* Dashboard page with responsive layout *@
@page "/"
@page "/dashboard"
@layout ResponsiveMainLayout

<div class="pfp-dashboard">
  <div class="pfp-page-header">
    <h2>Dashboard</h2>
    <p>Welcome to Physically Fit PT</p>
  </div>

  <div class="pfp-dashboard-grid">
    <div class="pfp-card">
      <div class="pfp-card-header">
        <h3>Today's Appointments</h3>
      </div>
      <div class="pfp-card-body">
        <div class="pfp-stat">
          <span class="pfp-stat-number">8</span>
          <span class="pfp-stat-label">Scheduled</span>
        </div>
      </div>
    </div>

    <div class="pfp-card">
      <div class="pfp-card-header">
        <h3>Active Patients</h3>
      </div>
      <div class="pfp-card-body">
        <div class="pfp-stat">
          <span class="pfp-stat-number">127</span>
          <span class="pfp-stat-label">Total</span>
        </div>
      </div>
    </div>

    <div class="pfp-card">
      <div class="pfp-card-header">
        <h3>Pending Notes</h3>
      </div>
      <div class="pfp-card-body">
        <div class="pfp-stat">
          <span class="pfp-stat-number">3</span>
          <span class="pfp-stat-label">To Complete</span>
        </div>
      </div>
    </div>

    <div class="pfp-card pfp-card-wide">
      <div class="pfp-card-header">
        <h3>Quick Actions</h3>
      </div>
      <div class="pfp-card-body">
        <div class="pfp-quick-actions">
          <a href="/patients" class="pfp-btn pfp-btn-primary">
            👥 View Patients
          </a>
          <a href="/appointments" class="pfp-btn pfp-btn-secondary">
            📅 Schedule Appointment
          </a>
          <a href="/notes/eval" class="pfp-btn pfp-btn-secondary">
            📝 New Eval Note
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
