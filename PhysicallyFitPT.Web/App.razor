<Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="new[] { typeof(PhysicallyFitPT.UI.Components.Pages.Dashboard).Assembly }">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(PhysicallyFitPT.UI.Components.Layout.ResponsiveMainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(PhysicallyFitPT.UI.Components.Layout.ResponsiveMainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
